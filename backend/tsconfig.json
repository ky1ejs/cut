{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    // "graphql/**/*.graphql",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}